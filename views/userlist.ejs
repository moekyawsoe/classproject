<!DOCTYPE html>
<html lang="en">

<head>
  <meta name="description" content="" />
  <meta name="author" content="" />
  <title><%= title %></title>
  <%- include('./common/head') %>

</head>

<body class="sb-nav-fixed">
  <%- include('./common/nav') %>

  <%- include('./common/menu') %>

  <div id="layoutSidenav_content">
    <main>
      <div class="container-fluid">
        
        <h1 class="mt-4 mb-5">User List</h1>
        <div class="card mb-4">
          <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Userlist Table
          </div>
          <div class="card-body">

            <div class="table-responsive">
              <table class="table table-striped table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Action</th>
                  </tr>
                </tfoot>
                <tbody>
                  <% if(users.length) { %>
                  <% for(var i=0; i<users.length; i++){ %>
                  <tr>
                    <td><%= users[i].id %></td>
                    <td><%= users[i].name %></td>
                    <td><%= users[i].email %></td>
                    <td><%= users[i].password %></td>
                    <td>
                      <a class="btn btn-success edit" href="/userlist/edit/<%=users[i].id%>">Edit</a>
                      <a class="btn btn-danger delete" onclick="return alert('Are You sure?')" href="/userlist/delete/<%=users[i].id%>">Delete</a>
                    </td>
                  </tr>
                  <% } %>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>

        </div>
      </div>
    </main>
    <%- include('./common/footer') %>
  </div>
  </div>

  <%- include('./common/script') %>
</body>

</html>
